---
import clsx from 'clsx';

export type Props = {
    class?: string,
};

const { class: className } = Astro.props;
---
<div class={clsx('relative', className)}>
    <div class="absolute inset-0 flex items-center justify-center ">
        <div class="w-72 h-72 max-w-full max-h-full relative opacity-[.35]">
            <div class="absolute top-0 -left-20 w-full h-full bg-emerald-500 rounded-full mix-blend-soft-light filter blur-2xl animate-hero -delay-5" />
            <div class="absolute top-0 -right-20 w-full h-full bg-sky-500 rounded-full mix-blend-soft-light filter blur-2xl animate-hero" />
            <div class="absolute -bottom-16 w-full h-full bg-blue-600 rounded-full mix-blend-soft-light filter blur-2xl animate-hero -delay-10" />
        </div>
    </div>
    <div class="absolute inset-0 flex items-center justify-center ">
        <div>
            <slot />
        </div>
    </div>
</div>